<div class="container">
    <div class="row">
    <div class="col-md-3" >
      <div class="col-md-12" >
           {{ hgn-profilebox
         firstName=model.userSnapshot.firstName lastName = model.userSnapshot.lastName role=model.userSnapshot.role
         logo=model.userSnapshot.profilePic
         MyProfile = (action 'MyProfile')
         }}

      </div>
      <div class="col-md-12" >
        <a href="/badges" style="text-decoration:none; color: black;">
          {{hgn-badges title="UserName" role=model.userSnapshot.role }}
        </a>
      </div>
    </div>
    <div class="col-md-9">
      <div class="col-md-6" >
        <div class="panel panel-default" style="height:350px;background-color:#C57CD2;text-align:center">
          <div class="panel-heading" style="background-color:#9957A5">Add Time</div>
          <div class="panel-body" >
            {{hgn-timer loggedinUser = loggedinUser}}
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default" style="height:350px;background-color:#FFCCBC;text-align:center">
          <div class="panel-heading" style="font: bold; color: #FDFEFE;background-color: #DC7633">Leaderboard</div>
          <div class="panel-body" style="padding:0px">
            {{hgn-tabs data=model.leaderboard}}
            
          </div>
        </div>
      </div>
      <div class="col-md-6" >
      {{weekly-effort-chart loggedinUser = loggedinUser}}
      </div>

      <div class="col-md-6">
      {{monthly-effort-chart loggedinUser = loggedinUser}}
      </div>
    </div>
  </div>
</div>
{{outlet}}
