  <div class="panel-body" style="padding:0px;">
    <table style="width:100%" class="table">
      <tr>
        <td height="20" style="padding:40px">
          <!--to do : link remove-->
          {{!--
          <a href="/myprofile">
            <img style="border-radius:500px;width:100%" src="{{logo}}">
          </a> --}}

          <img style="border-radius:500px;width:100%" src={{logo}}>
