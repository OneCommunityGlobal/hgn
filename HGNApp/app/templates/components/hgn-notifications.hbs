<div class = "col-xs-12">
<div class="card card-outline-primary mb-3" >
  <div class="card-header">
   <h4 class="card-title">Notifications
      <a class = "pull-right" data-toggle="collapse" data-target="#notifications" > <span class = "glyphicon glyphicon-chevron-right" > </span> </a>
    </h4> 
      
  </div>
  <div class="card-block collapse" id = "notifications">
    <div class="list-group">
      {{#each notifications as |notification|}}
      <li class="list-group-item">{{notification.message}}
       <a href="#" class="pull-right" {{action "deleteNotification" notification}} data-toggle="tooltip" data-placement="right" title="Mark Notification As Read">
      <span class = "glyphicon glyphicon-ok"></span>
    </a>
    </li>
    
{{/each}}

    </div>


</div>
</div>
</div>