<div class="project-page">
  <div class="container">
    <h2>Projects</h2>
    <button class="btn btn-primary" type="button" disabled= {{ isUserNotAdministrator }} data-toggle="modal" data-target="#newProjectModal"> <span class="glyphicon glyphicon-plus"></span>Add New Project</button>
    <!-- New Project Modal -->
    <div class="modal fade" id="newProjectModal">
      <div class="modal-dialog" role="dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5>New Project</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="form-horizontal">
              <div class="form-group form-inline">
                <label class="control-label col-sm-2" for="projectName">Project Name</label> {{input class="form-control required" id="projectName" type="text" placeholder="Enter project name" autofocus="autofocus" value=model.projectName }}
              </div>
              <div class="form-group form-inline">
                <label class="control-label col-sm-2" for="tasks">Tasks: </label>
              {{#each model.tasks as |task|}}
                  {{task.Description}}
                {{/each}}
                {{input class="form-control required" type="text" placeholder="Enter task" value=newTask.Description }}
                <button class="btn" type="button" {{action 'addNewTask'}}><span class="glyphicon glyphicon-plus"></span>
              </button>
                {{#if addTask }}
                  <div>
                    {{input class="form-control required" type="text" placeholder="Enter task" value=newTask.Description }}
                  </div>
                {{/if}}

              </div>
              <div>
                <label>
                {{radio-button value="true" groupValue="isActive" changed="isActiveToggled"}}
                active
              </label>
                <label>
                {{radio-button value="false" groupValue="isActive" changed="isActiveToggled"}}
                inactive
              </label>
              </div>

              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" {{action 'addProject'}} {{bind-attr disabled=disabled}} data-dismiss="modal">Add Project</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
    <!-- List of Projects -->
    <div class="card">
      <div class="card-block">
        <div class="card-subtitle mb-2 text-muted list-group list-group-flush">
          {{#each model as |project|}}

            <li>
              {{#link-to "project.viewproject" project._id }}{{project.projectName}} {{/link-to}}
            </li>

          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
{{outlet}}
