<div class="project-page">
  <div class="container">
    <h2>Projects</h2>
    <button class="btn btn-primary" type="button" disabled= {{ isUserNotAdministrator }} data-toggle="modal" data-target="#newProjectModal"> <span class="glyphicon glyphicon-plus"></span>Add New Project</button>
    <!-- New Project Modal -->
    <div class="modal fade" id="newProjectModal">
      <div class="modal-dialog" role="dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5>New Project</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group form-inline">
                <label for="projectName">Project Name</label> {{input class="form-control required" id="projectName" type="text" placeholder="Enter project name" autofocus="autofocus" value=projectName }}
              </div>
              <div class="form-group form-inline">
                <label for="tasks">Tasks</label> {{input class="form-control required" id="taskName" type="text" placeholder="Enter task" value=taskName }}
                <button class="btn" type="button"><span class="glyphicon glyphicon-plus"></span>
                  </button>
              </div>
              <div>
                <label class="radio-inline">
                  <input type="radio" name="optradio">Active
                </label>
                <label class="radio-inline">
                  <input type="radio" name="optradio">Inactive
                </label>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" {{action 'addProject'}} {{bind-attr disabled=disabled}} data-dismiss="modal">Add Project</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
    <!-- List of Projects -->
    <div class="card">
      <div class="card-block">
        <div class="card-subtitle mb-2 text-muted list-group list-group-flush">
          {{#each model.projectName as |project|}}
            {{ project }}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
{{outlet}}
