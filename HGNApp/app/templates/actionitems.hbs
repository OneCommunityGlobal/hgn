<div class="container">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col" class="col-sm-1">Created By</th>
        <th scope="col" class="col-sm-6">Description</th>
        <th scope="col" class="col-sm-1">Edit</th>
        <th scope="col" class="col-sm-1">Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |actionitem|}}
      <tr>

        <td class="col-sm-1">{{actionitem.createdBy}}</td>
        <td class="col-sm-6">{{input value = actionitem.description class = "col-sm-10"}}</td>
        <td class="col-sm-1">
          <span class="glyphicon glyphicon-floppy-disk" {{action "editactionitem" actionitem}}></span>
        </td>
        <td class="col-sm-1">
          <span class="glyphicon glyphicon-remove-sign" {{action "deleteactionitem" actionitem}}></span>
        </td>

      </tr>
      {{/each}}

    </tbody>
  </table>

  <button {{action "showForm"}} class=>Add New Action Item</button>

  {{#if addnewactionitem }}

  <form class="form-inline">
    <div class="form-group col-sm-4">
      <select onchange={{action (mut newactionitem.assignedTo) value="target.value"}}>
  {{#each teammembers as |member|}}
    <option value={{member._id}} selected={{eq assignee member}}>{{member.name}}</option>
  {{/each}}
</select>

     
    </div>


    <div class="form-group col-sm-6">
      {{input value = newactionitem.description}}
    </div>


    <button type="submit" class="btn btn-default" {{action "createActionItem"}}>Submit</button>
  </form>

  {{/if}}
</div>
{{outlet}}