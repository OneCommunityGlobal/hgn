  <table>
    <tr>
      <td>
        {{super-number id="hours_input" min=0 max=23 loop=true value=1}}
      </td>
      <td>
        {{super-number id="minutes_input" value=0 loop=true min=0 max=59 loop=true}}
      </td>
      <td>
        {{super-number id="standard_seconds" value=0 min=0 max=59 loop=true}}
      </td>
    </tr>
    <tr style="text-align:center">
      <td>
        Hours
      </td>
      <td>
        Minutes
      </td>
      <td>
        Seconds
      </td>
    </tr>
  </table>

  <hr>

  <label> Select Project </label>
  <select class="form-control" id="sel1">
    <option>Food Programme</option>
    <option>Software Development</option>
