    font-size: 40px;
    margin: 5% auto;
    font-weight: bold;
    font-family: sans-serif;
  }
  .task-timer button{
    color: black;
    height: 50px;
    width: 85px;
    cursor: pointer;
    margin: 4px;
    font-size: 17px;
    background-color: #FFAC66;
  }
  .task-timer #addTimeToTask{
    width: 170px;
    background-color: #20A272;
    color: #ECECEC;
    margin: 21px;
  }
  .task-timer button:disabled{
    background-color: grey;
  }
</style>
